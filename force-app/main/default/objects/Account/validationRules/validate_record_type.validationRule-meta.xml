<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>validate_record_type</fullName>
    <active>true</active>
    <description>Valida se existe um tipo de registro atribuído na conta</description>
    <errorConditionFormula>ISBLANK(RecordType.Name) || ISNULL(RecordType.Name)</errorConditionFormula>
    <errorMessage>Tipo de Registro obrigatório</errorMessage>
</ValidationRule>
